{
  "parser"  : "babel-eslint",
  "plugins": [
    "jsx-a11y",
    "jest"
  ],
  "extends" : [
    "standard",
    "standard-react",
    "plugin:jsx-a11y/recommended",
    "plugin:jest/recommended"
  ],
  "env"     : {
    "browser" : true,
    "node": true,
    "jest/globals": true
  },
  "globals" : {
    "API_HEADER"   : false,
    "__DEV__"      : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__COVERAGE__" : false,
    "__BASENAME__" : false
  },
  "rules": {
    "no-var": 2,
    "prefer-const": 2,
    "prefer-reflect": 2,
    "react/jsx-closing-bracket-location": [2, "after-props"],
    "react/require-render-return": 2,
    "react/no-deprecated": 2,
    "react/prefer-es6-class": 2,
    "react/prefer-stateless-function": 2
  }
}
